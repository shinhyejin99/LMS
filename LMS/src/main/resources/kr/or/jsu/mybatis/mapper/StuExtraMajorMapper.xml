<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
 * == 개정이력(Modification Information) ==
 *
 *   수정일      			수정자           수정내용
 *  ============   	============== =======================
 *  2025. 10. 14.     	김수현            최초 생성
 *
-->
<mapper namespace="kr.or.jsu.mybatis.mapper.StuExtraMajorMapper">

	<!-- 복수전공 여부 확인 -->
    <select id="hasDoubleMajor" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM
        	STU_EXTRA_MAJOR
        WHERE STUDENT_NO = #{studentNo}
          AND EXTRA_TYPE = 'DUAL'
    </select>

    <!-- 부전공 여부 확인 -->
    <select id="hasMinorMajor" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM
        	STU_EXTRA_MAJOR
        WHERE STUDENT_NO = #{studentNo}
          AND EXTRA_TYPE = 'SUB'
    </select>


</mapper>