/* Custom Button Styles */

.custom-btn {
  display: inline-block;
  font-weight: 400;
  line-height: 1.5;
  text-align: center;
  text-decoration: none;
  vertical-align: middle;
  cursor: pointer;
  user-select: none;
  border: 1px solid transparent;
  transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}

.custom-btn:focus {
  outline: 0;
  box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

.custom-btn:disabled {
  pointer-events: none;
  opacity: 0.65;
}

/* Size variants */
.custom-btn-sm {
  padding: 6px 12px;
  font-size: 0.875rem;
  border-radius: 0.25rem;
}

.custom-btn-md {
  padding: 8px 16px;
  font-size: 1rem;
  border-radius: 0.375rem;
}

.custom-btn-lg {
  padding: 10px 20px;
  font-size: 1.125rem;
  border-radius: 0.5rem;
}

/* Primary button */
.custom-btn-primary {
  color: #fff;
  background-color: #0d6efd;
  border-color: #0d6efd;
}

.custom-btn-primary:hover {
  color: #fff;
  background-color: #0b5ed7;
  border-color: #0a58ca;
}

.custom-btn-primary:focus {
  color: #fff;
  background-color: #0b5ed7;
  border-color: #0a58ca;
  box-shadow: 0 0 0 0.25rem rgba(49, 132, 253, 0.5);
}

.custom-btn-primary:active {
  color: #fff;
  background-color: #0a58ca;
  border-color: #0a53be;
}

.custom-btn-primary:disabled {
  color: #fff;
  background-color: #0d6efd;
  border-color: #0d6efd;
}

/* Danger button */
.custom-btn-danger {
  color: #fff;
  background-color: #dc3545;
  border-color: #dc3545;
}

.custom-btn-danger:hover {
  color: #fff;
  background-color: #bb2d3b;
  border-color: #b02a37;
}

.custom-btn-danger:focus {
  color: #fff;
  background-color: #bb2d3b;
  border-color: #b02a37;
  box-shadow: 0 0 0 0.25rem rgba(225, 83, 97, 0.5);
}

.custom-btn-danger:active {
  color: #fff;
  background-color: #b02a37;
  border-color: #a52834;
}

.custom-btn-danger:disabled {
  color: #fff;
  background-color: #dc3545;
  border-color: #dc3545;
}

/* Secondary button */
.custom-btn-secondary {
  color: #fff;
  background-color: #6c757d;
  border-color: #6c757d;
}

.custom-btn-secondary:hover {
  color: #fff;
  background-color: #5c636a;
  border-color: #565e64;
}

.custom-btn-secondary:focus {
  color: #fff;
  background-color: #5c636a;
  border-color: #565e64;
  box-shadow: 0 0 0 0.25rem rgba(130, 138, 145, 0.5);
}

.custom-btn-secondary:active {
  color: #fff;
  background-color: #565e64;
  border-color: #51585e;
}

.custom-btn-secondary:disabled {
  color: #fff;
  background-color: #6c757d;
  border-color: #6c757d;
}

/* Outline variants */
.custom-btn-outline-primary {
  color: #0d6efd;
  border-color: #0d6efd;
  background-color: transparent;
}

.custom-btn-outline-primary:hover {
  color: #fff;
  background-color: #0d6efd;
  border-color: #0d6efd;
}

.custom-btn-outline-secondary {
  color: #6c757d;
  border-color: #6c757d;
  background-color: transparent;
}

.custom-btn-outline-secondary:hover {
  color: #fff;
  background-color: #6c757d;
  border-color: #6c757d;
}

.custom-btn-outline-danger {
  color: #dc3545;
  border-color: #dc3545;
  background-color: transparent;
}

.custom-btn-outline-danger:hover {
  color: #fff;
  background-color: #dc3545;
  border-color: #dc3545;
}

/* Grade selection buttons */
.grade-btn {
  display: inline-block;
  padding: 6px 12px;
  font-size: 0.875rem;
  font-weight: 400;
  line-height: 1.5;
  text-align: center;
  text-decoration: none;
  vertical-align: middle;
  cursor: pointer;
  user-select: none;
  border: 1px solid;
  border-radius: 0.25rem;
  background-color: transparent;
  transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
}

.grade-btn:disabled {
  pointer-events: none;
  opacity: 0.65;
}

/* A+ A0 - Sky blue */
.grade-btn-a {
  color: #0dcaf0;
  border-color: #0dcaf0;
}

.grade-btn-a.selected {
  color: #fff;
  background-color: #0dcaf0;
  border-color: #0dcaf0;
  font-weight: 700;
}

/* B+ B0 - Blue */
.grade-btn-b {
  color: #0d6efd;
  border-color: #0d6efd;
}

.grade-btn-b.selected {
  color: #fff;
  background-color: #0d6efd;
  border-color: #0d6efd;
  font-weight: 700;
}

/* C+ C0 - Yellow */
.grade-btn-c {
  color: #ffc107;
  border-color: #ffc107;
}

.grade-btn-c.selected {
  color: #000;
  background-color: #ffc107;
  border-color: #ffc107;
  font-weight: 700;
}

/* D+ D0 - Red */
.grade-btn-d {
  color: #dc3545;
  border-color: #dc3545;
}

.grade-btn-d.selected {
  color: #fff;
  background-color: #dc3545;
  border-color: #dc3545;
  font-weight: 700;
}

/* F - Gray */
.grade-btn-f {
  color: #6c757d;
  border-color: #6c757d;
}

.grade-btn-f.selected {
  color: #fff;
  background-color: #6c757d;
  border-color: #6c757d;
  font-weight: 700;
}

/* P/NP - Default */
.grade-btn-default {
  color: #0d6efd;
  border-color: #0d6efd;
}

.grade-btn-default.selected {
  color: #fff;
  background-color: #0d6efd;
  border-color: #0d6efd;
  font-weight: 700;
}
