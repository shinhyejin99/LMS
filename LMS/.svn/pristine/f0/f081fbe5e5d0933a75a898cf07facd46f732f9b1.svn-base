/* Generic avatar utilities for student photos */

.avatar-56 {
  width: 56px;
  height: 56px;
  border-radius: 50%;
  object-fit: cover;
  border: 1px solid #dee2e6;
  background-color: #fff;
  display: block;
}

.avatar-48 {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  object-fit: cover;
  border: 1px solid #dee2e6;
  background-color: #fff;
  display: block;
}

.avatar-fallback-56 {
  width: 56px;
  height: 56px;
  border-radius: 50%;
  border: 1px solid #dee2e6;
  background-color: #f8f9fa;
  color: #adb5bd;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
}

.avatar-fallback-48 {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  border: 1px solid #dee2e6;
  background-color: #f8f9fa;
  color: #adb5bd;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.25rem;
}

