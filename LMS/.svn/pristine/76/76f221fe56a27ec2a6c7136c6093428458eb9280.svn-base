<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.jsu.mybatis.mapper.PrfCareerMapper">

<!-- 교수 경력 등록 -->
    <insert id="insertPrfCareer" parameterType="kr.or.jsu.vo.PrfCareerVO">
        INSERT INTO PRF_CAREER (
            CAREER_NAME,
            PROFESSOR_NO,
            START_DAY,
            END_DAY
        ) VALUES (
            #{careerName},
            #{professorNo},
            #{startDay},
            #{endDay}
        )
    </insert>

    <!-- 교수 경력 전체 목록 조회 -->
    <select id="selectPrfCareerList" resultType="kr.or.jsu.vo.PrfCareerVO">
        SELECT
            CAREER_NAME,
            PROFESSOR_NO,
            START_DAY,
            END_DAY
        FROM PRF_CAREER
    </select>

    <!-- 특정 교수 경력 조회  -->
    <select id="selectPrfCareer" parameterType="string" resultType="kr.or.jsu.vo.PrfCareerVO">
        SELECT
            CAREER_NAME,
            PROFESSOR_NO,
            START_DAY,
            END_DAY
        FROM PRF_CAREER
        WHERE CAREER_NAME = #{careerName}
    </select>

    <!-- 교수 경력 수정  -->
    <update id="updatePrfCareer" parameterType="kr.or.jsu.vo.PrfCareerVO">
        UPDATE PRF_CAREER
        SET
            PROFESSOR_NO = #{professorNo},
            START_DAY = #{startDay},
            END_DAY = #{endDay}
        WHERE
            CAREER_NAME = #{careerName}
    </update>

    <!-- 교수 경력 삭제  -->
    <delete id="deletePrfCareer" parameterType="string">
        DELETE FROM PRF_CAREER
        WHERE CAREER_NAME = #{careerName}
    </delete>


</mapper>