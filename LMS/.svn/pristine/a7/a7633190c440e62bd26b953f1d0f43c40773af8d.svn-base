<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.jsu.mybatis.mapper.LctWeekbyMapper">

 <insert id="insertLctWeekby" parameterType="kr.or.jsu.vo.LctWeekbyVO">
        INSERT INTO LCT_WEEKBY (
            LECTURE_WEEK,
            LECTURE_ID,
            WEEK_GOAL,
            WEEK_DESC
        ) VALUES (
            #{lectureWeek},
            #{lectureId},
            #{weekGoal},
            #{weekDesc}
        )
    </insert>

    <!-- 주차별 강의 정보 전체 목록 조회 -->
    <select id="selectLctWeekbyList" resultType="kr.or.jsu.vo.LctWeekbyVO">
        SELECT
            LECTURE_WEEK,
            LECTURE_ID,
            WEEK_GOAL,
            WEEK_DESC
        FROM LCT_WEEKBY
    </select>

    <!-- 특정 주차별 강의 정보 조회 -->
    <select id="selectLctWeekby" parameterType="string" resultType="kr.or.jsu.vo.LctWeekbyVO">
        SELECT
            LECTURE_WEEK,
            LECTURE_ID,
            WEEK_GOAL,
            WEEK_DESC
        FROM LCT_WEEKBY
        WHERE LECTURE_ID = #{lectureId}
    
    </select>

    <!-- 주차별 강의 정보 수정 -->
    <update id="updateLctWeekby" parameterType="kr.or.jsu.vo.LctWeekbyVO">
        UPDATE LCT_WEEKBY
        SET
            WEEK_GOAL = #{weekGoal},
            WEEK_DESC = #{weekDesc},
            LECTURE_WEEK = #{lectureWeek}
        WHERE
            LECTURE_ID = #{lectureId}
           
    </update>

    <!-- 주차별 강의 정보 삭제 -->
    <delete id="deleteLctWeekby" parameterType="string">
        DELETE FROM LCT_WEEKBY
        WHERE LECTURE_ID = #{lectureId}

    </delete>



</mapper>