<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.jsu.mybatis.mapper.ExamQuestionMapper">

	<insert id="insertExamQuestion">
        INSERT INTO exam_question (
            question_no,
            lct_exam_id,
            question,
            answer_type_cd,
            question_score,
            image_file_id
        ) VALUES (
            #{questionNo},
            #{lctExamId},
            #{question},
            #{answerTypeCd},
            #{questionScore},
            #{imageFileId}
        )
    </insert>

    <select id="selectExamQuestionList" resultType="kr.or.jsu.vo.ExamQuestionVO">
        SELECT
            question_no,
            lct_exam_id,
            question,
            answer_type_cd,
            question_score,
            image_file_id
        FROM
            exam_question
        ORDER BY
            lct_exam_id, question_no
    </select>

    <update id="updateExamQuestion">
        UPDATE exam_question
        SET
            question = #{question},
            answer_type_cd = #{answerTypeCd},
            question_score = #{questionScore},
            image_file_id = #{imageFileId}
        WHERE
            question_no = #{questionNo} AND lct_exam_id = #{lctExamId}
    </update>

    <delete id="deleteExamQuestion">
        DELETE FROM exam_question
        WHERE
            question_no = #{questionNo} AND lct_exam_id = #{lctExamId}
    </delete>
</mapper>