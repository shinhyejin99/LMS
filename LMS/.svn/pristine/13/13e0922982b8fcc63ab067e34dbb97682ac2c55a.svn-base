<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.jsu.mybatis.mapper.PlaceEquipMapper">

<!-- 장비 등록 -->
  <insert id="insertPlaceEquip" parameterType="kr.or.jsu.vo.PlaceEquipVO">
	INSERT INTO PLACE_EQUIP (
		EQUIP_CD
		, PLACE_CD
		, AMOUNT
	)VALUES (
		  #{equipCd}
		, #{placeCd}
		, #{amount}
	)
  </insert>

  <!-- 장비 목록 조회 -->
  <select id="selectPlaceEquipList" resultType="kr.or.jsu.vo.PlaceEquipVO">
    SELECT 
	    EQUIP_CD
	    , PLACE_CD
	    , AMOUNT
    FROM PLACE_EQUIP
  </select>

  <!-- 특정 장비 조회 -->
  <select id="selectPlaceEquip" parameterType="string" resultType="kr.or.jsu.vo.PlaceEquipVO">
    SELECT 
	    EQUIP_CD
	    , PLACE_CD
	    , AMOUNT
    FROM PLACE_EQUIP
    WHERE EQUIP_CD = #{equipCd}
  </select>

  <!-- 장비 정보 수정 -->
  <update id="updatePlaceEquip" parameterType="kr.or.jsu.vo.PlaceEquipVO">
    UPDATE PLACE_EQUIP
    SET 
    	PLACE_CD = #{placeCd},
        AMOUNT = #{amount}
    WHERE EQUIP_CD = #{equipCd}
  </update>

  <!-- 장비 삭제 -->
  <delete id="deletePlaceEquip" parameterType="string">
    DELETE FROM PLACE_EQUIP
    WHERE EQUIP_CD = #{equipCd}
  </delete>
</mapper>