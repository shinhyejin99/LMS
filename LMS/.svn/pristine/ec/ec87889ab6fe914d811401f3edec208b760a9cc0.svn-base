/**
 * <pre>
 * << 개정이력(Modification Information) >>
 *
 *   수정일      			수정자           수정내용
 *  -----------   	-------------    ---------------------------
 *  2025. 10. 29.     	김수현            최초 생성
 *
 * </pre>
 */
@charset "UTF-8";

/* 외부 래퍼 */
.notification-create-page {
    padding: 20px;
    background-color: #f5f7fa;
    min-height: 100vh;
}

/* 메인 컨테이너 */
.notification-create-page .notification-create-container {
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    padding: 0;
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(91, 124, 235, 0.15);
    overflow: hidden;
}

/* 페이지 헤더 */
.notification-create-page .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25px 35px;
    background: linear-gradient(135deg, #5b7ceb 0%, #7b68c4 100%);
    color: white;
}

.notification-create-page .header-left {
    display: flex;
    align-items: center;
    gap: 12px;
}

.notification-create-page .header-left i {
    font-size: 28px;
}

.notification-create-page .notification-create-container .header-left h1 {
    font-size: 22px;
    font-weight: 600;
    margin: 0;
    color: white;
}

.notification-create-page .header-right {
    display: flex;
    align-items: center;
}

.notification-create-page .sender-info {
    font-size: 14px;
    background: rgba(255, 255, 255, 0.2);
    padding: 8px 16px;
    border-radius: 20px;
    font-weight: 500;
}

/* 알림 메시지 */
.notification-create-page .alert {
    margin: 20px 35px;
    padding: 15px 20px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
}

.notification-create-page .alert i {
    font-size: 18px;
}

.notification-create-page .alert-success {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

.notification-create-page .alert-danger {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}

/* 메일 작성 폼 */
.notification-create-page .mail-form {
    padding: 30px 35px;
}

/* 메일 필드 */
.notification-create-page .mail-field {
    display: flex;
    align-items: flex-start;
    padding: 15px 0;
    border-bottom: 1px solid #e8ecef;
}

.notification-create-page .mail-field:first-child {
    padding-top: 0;
}

.notification-create-page .field-header {
    width: 120px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: 5px;
    padding-top: 8px;
}

.notification-create-page .field-label {
    font-size: 17px;
    font-weight: 600;
    color: #333;
}

.notification-create-page .required-mark {
    color: #ff4757;
    font-weight: bold;
}

.notification-create-page .field-content {
    flex: 1;
}

.notification-create-page .field-content-full {
    flex: 1;
    width: 100%;
    font-size: 16px;
}

/* 셀렉트 박스 */
.notification-create-page .field-select {
    width: 100%;
    padding: 10px 15px;
    border: 1px solid #dce1e6;
    border-radius: 6px;
    font-size: 15px;
    color: #333;
    background-color: white;
    transition: all 0.2s;
}

.notification-create-page .field-select:focus {
    outline: none;
    border-color: #5b7ceb;
    box-shadow: 0 0 0 3px rgba(91, 124, 235, 0.1);
}

/* 구분선 */
.notification-create-page .mail-divider {
    height: 2px;
    background: linear-gradient(90deg, transparent, #5b7ceb, transparent);
    margin: 25px 0;
}

/* 메시지 필드 */
.notification-create-page .message-field {
    flex-direction: column;
    padding: 20px 0 0;
    border-bottom: none;
}

.notification-create-page .message-field .field-header {
    width: 100%;
    padding-top: 0;
    margin-bottom: 10px;
}

/* 메시지 텍스트 영역 */
.notification-create-page .message-textarea {
    width: 100%;
    min-height: 150px;
    padding: 15px;
    border: 1px solid #dce1e6;
    border-radius: 8px;
    font-size: 14px;
    line-height: 1.6;
    color: #333;
    resize: vertical;
    font-family: inherit;
    transition: all 0.2s;
}

.notification-create-page .message-textarea:focus {
    outline: none;
    border-color: #5b7ceb;
    box-shadow: 0 0 0 3px rgba(91, 124, 235, 0.1);
}

.notification-create-page .message-textarea::placeholder {
    color: #adb5bd;
}

/* 버튼 영역 */
.notification-create-page .button-area {
    display: flex;
    justify-content: flex-end;
    gap: 12px;
    margin-top: 30px;
    padding-top: 25px;
    border-top: 2px solid #f0f2f5;
}

.notification-create-page .btn {
    padding: 12px 28px;
    border: none;
    border-radius: 8px;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 8px;
    justify-content: center;
}

.notification-create-page .btn i {
    font-size: 16px;
}

.notification-create-page .btn-cancel {
    background-color: #6c757d;
    color: white;
}

.notification-create-page .btn-cancel:hover {
    background-color: #5a6268;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(108, 117, 125, 0.3);
}

.notification-create-page .btn-send {
    background: #5b7ceb;
    color: white;
}

.notification-create-page .btn-send:hover {
    background: #4a6bd9;
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(91, 124, 235, 0.4);
}

.notification-create-page .btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none !important;
}

/* ===========================
   발송 확인 모달
   =========================== */

.notification-create-page .confirm-modal {
    display: none;
    position: fixed;
    z-index: 9999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    align-items: center;
    justify-content: center;
}

.notification-create-page .confirm-modal .modal-content {
    background-color: white;
    width: 90%;
    max-width: 500px;
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
    from {
        opacity: 0;
        transform: translateY(-50px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* 모달 헤더 */
.notification-create-page .confirm-modal .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 25px;
    background: linear-gradient(135deg, #5b7ceb 0%, #7b68c4 100%);
    color: white;
    border-radius: 12px 12px 0 0;
}

.notification-create-page .confirm-modal .modal-title {
    display: flex;
    align-items: center;
    gap: 10px;
}

.notification-create-page .confirm-modal .modal-title i {
    font-size: 24px;
}

.notification-create-page .confirm-modal .modal-title h3 {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
}

.notification-create-page .confirm-modal .modal-close {
    background: rgba(255, 255, 255, 0.2);
    border: none;
    color: white;
    font-size: 28px;
    cursor: pointer;
    padding: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    transition: background 0.2s;
}

.notification-create-page .confirm-modal .modal-close:hover {
    background: rgba(255, 255, 255, 0.3);
}

/* 모달 바디 */
.notification-create-page .confirm-modal .modal-body {
    padding: 40px 30px;
}

.notification-create-page .confirm-modal .confirm-info {
    display: flex;
    align-items: center;
    justify-content: center;  /* ⭐ 중앙 정렬로 변경 */
    gap: 20px;
}

.notification-create-page .confirm-modal .confirm-text {
    flex: 1;
}

.notification-create-page .confirm-modal .recipient-count {
    font-size: 20px;
    color: #333;
    margin: 0 0 8px 0;
}

.notification-create-page .confirm-modal .recipient-count strong {
    font-size: 28px;
    color: #5b7ceb;
    font-weight: 700;
}

.notification-create-page .confirm-modal .confirm-message {
    font-size: 15px;
    color: #666;
    margin: 0;
}

/* 모달 푸터 */
.notification-create-page .confirm-modal .modal-footer {
    padding: 15px 25px;
    background: #f8f9fa;
    border-top: 1px solid #e0e0e0;
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    border-radius: 0 0 12px 12px;
}

.notification-create-page .confirm-modal .btn-confirm {
    background: #5b7ceb;
    color: white;
}

.notification-create-page .confirm-modal .btn-confirm:hover {
    background: #4a6bd9;
}

/* 시연용 버튼 스타일 */
.notification-create-page .btn-demo {
    background-color: rgb(2, 46, 253);
    color: white;
}

.notification-create-page .btn-demo:hover {
    background-color: rgb(0, 0, 255);
    transform: translateY(-2px);
}

.notification-create-page .btn-demo i {
    font-size: 16px;
}

/* 반응형 */
@media (max-width: 768px) {
    .notification-create-page .notification-create-container {
        max-width: 100%;
        border-radius: 0;
        justify-content: center;
    }

    .notification-create-page .page-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
        padding: 20px;
    }

    .notification-create-page .mail-form {
        padding: 20px;
    }

    .notification-create-page .mail-field {
        flex-direction: column;
    }

    .notification-create-page .field-header {
        width: 100%;
        padding-top: 0;
        margin-bottom: 8px;
    }

    .notification-create-page .button-area {
        flex-direction: column;
    }

    .notification-create-page .btn {
        width: 100%;
        justify-content: center;
    }

    .notification-create-page .confirm-modal .confirm-info {
        flex-direction: column;
        text-align: center;
    }
}