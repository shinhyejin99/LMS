/** * <pre>
 * << 개정이력(Modification Information) >>
 * * 수정일      			수정자           수정내용
 * -----------   	-------------    ---------------------------
 * 2025. 10. 14.     	정태일            최초 생성
 * </pre>
 */
@charset "UTF-8";

:root {
    --primary-color: #4a90e2; /* A slightly softer blue */
    --primary-light: #e6f2ff; /* Very light primary for backgrounds */
    --secondary-color: #6c757d; /* Standard gray */
    --text-color-dark: #343a40;
    --text-color-medium: #495057;
    --text-color-light: #868e96;
    --border-color: #e9ecef;
    --background-light: #f8f9fa;
    --shadow-light: 0 4px 10px rgba(0, 0, 0, 0.05);
    --shadow-medium: 0 6px 15px rgba(0, 0, 0, 0.08);

    /* UI 최종 개선을 위한 변수 추가 */
    --border-color-light: #f0f0f0; /* 매우 옅은 구분선 */
}

/* LMS 주조색: #007bff (파란색 계열)을 기준으로 디자인 통일 */

/* ==================================== */
/* 1. 기본 레이아웃 및 컨테이너 스타일 */
/* ==================================== */
.main-container {
	max-width: 1300px; /* 전체 컨테이너 너비 확장 */
	margin: 0 auto;
	padding: 2rem 1.25rem;
}

/* 2단 컨테이너: 달력(왼쪽)과 목록(오른쪽) 배치 */
.academic-calendar-container {
	display: flex;
	gap: 25px;
	align-items: stretch; /* 높이를 같게 */
	flex-wrap: wrap; /* 반응형을 위해 추가 */
}

@media (max-width: 992px) {
    .academic-calendar-container {
        flex-direction: column; /* 작은 화면에서 세로로 쌓이도록 */
        gap: 20px;
    }
}

/* 캘린더 래퍼: 왼쪽 영역 */
#calendar-wrapper {
/* 	flex: 3; */
/* 	flex-grow: 3; */
	flex-shrink: 0; /* 축소되지 않도록 설정 (필요시) */
	flex-basis: 75%; /* 비율 기준으로 flex-basis 지정 */
	min-width: 65%;
	background: #fff;
	border-radius: 12px; /* 모서리를 조금 더 둥글게 */
	padding: 20px;
	box-shadow: var(--shadow-medium); /* 그림자를 조금 더 명확하게 */
}

/* 주요 일정 목록 패널: 오른쪽 영역 */
.upcoming-events-panel {
/* 	flex: 1; */
/* 	flex-grow: 1; */
	flex: 0 0 auto;
    flex-shrink: 0; /* 축소되지 않도록 설정 (필요시) */
	flex-basis: 25%; /* 비율 기준으로 flex-basis 지정 */
	min-width: 300px;
	background: #ffffff; /* 흰색 배경으로 변경 */
	border-radius: 12px;
	
	position: relative; /* 자식 요소 절대 위치 지정 기준 */
	
	padding: 1.25rem 1.25rem 4.5rem 1.25rem;
	box-shadow: var(--shadow-light);
	border: 1px solid var(--border-color); /* 깔끔한 경계선 추가 */

    /* 작은 화면에서 패널이 전체 너비를 차지하도록 */
    @media (max-width: 992px) {
        min-width: 100%;
    }
}

/* 주요 일정 목록 패널: 오른쪽 영역 */
.upcoming-events-panel {
    /* ... 기존 스타일 유지 ... */
    position: relative;
    /* 버튼 공간 확보를 위해 하단 패딩을 늘립니다. */
    /* 버튼 높이와 동일하게 넉넉히 확보 */
	padding: 1.25rem 1.25rem 4.5rem 1.25rem; 
    /* ... 나머지 스타일 유지 ... */
}


/* 우측 패널의 '전체 일정' 링크/버튼 스타일 (하단 고정형 - 모던 미니멀 스타일) */
.upcoming-events-panel #viewAllEventsLink {
    /* 캘린더 하단의 전체 목록보기 버튼에만 적용 */
	display: flex;
	align-items: center;
    justify-content: center; /* 가운데 정렬 */
    
    position: absolute; /* 패널 하단에 고정 */
    bottom: 0; 
    left: 0;
    width: 100%; 
    
    /* 미니멀 디자인 적용 */
    padding: 15px 10px; /* 세로 패딩을 키워 클릭 영역 확보 */
    
    /* 배경색과 테두리를 없애고 상단 선만 남김 */
    background-color: #fff; /* 흰색 배경 유지 */
    color: var(--primary-color); /* 주조색 텍스트 */
    font-size: 1rem;
    font-weight: 700;
    text-decoration: none;
    border: none; 
    border-top: 1px solid var(--border-color); /* 얇은 구분선 */
    border-radius: 0 0 12px 12px; /* 하단 모서리에 맞춤 */
    
    transition: background-color 0.2s, color 0.2s;
}

.upcoming-events-panel #viewAllEventsLink:hover {
    background-color: var(--primary-light); /* 호버 시 매우 연한 주조색 배경 */
    color: var(--primary-color); /* 텍스트 색상 유지 */
    /* 호버 시 상단 구분선 색상 변경 (선택 사항) */
    border-top-color: var(--primary-color); 
}

/* 목록 아이콘은 오른쪽 화살표가 더 적합합니다. */
.upcoming-events-panel #viewAllEventsLink i.fas {
    margin-left: 8px; 
    font-size: 0.9em;
}


/* 목록 헤더 */
.upcoming-events-panel h2 {
	color: var(--text-color-medium); /* 제목 색상을 주조색 대신 진한 회색으로 */
	padding-bottom: 12px;
	border-bottom: 3px solid var(--primary-color); /* 주조색으로 강조선 */
	margin-bottom: 15px;
	font-weight: 700;
}

/* ==================================== */
/* 2. FullCalendar 상세 스타일 */
/* ==================================== */

/* 캘린더 헤더 (월 제목, 버튼 영역) */
.fc .fc-toolbar {
	margin-bottom: 1.2rem;
}

/* 캘린더 제목 */
.fc .fc-toolbar-title {
	font-weight: 700;
	font-size: 1.8rem; /* 제목 크기 키워 명확하게 */
	color: var(--text-color-dark);
}

/* 버튼 디자인 (주조색 활용) */
.fc .fc-button-primary {
	background-color: var(--primary-color); /* 주조색 배경 */
	color: #fff;
	border: none;
	border-radius: 6px;
	padding: 8px 14px;
	font-weight: 500;
	font-size: 0.9rem;
	transition: background-color 0.2s;
}

.fc .fc-button-primary:hover {
	background-color: #0056b3; /* 어두운 주조색 */
}

/* 활성화/오늘 버튼 */
.fc .fc-button-primary:not(:disabled).fc-button-active, .fc .fc-button-primary:not(:disabled):active
	{
	background-color: #28a745; /* '오늘' 버튼은 다른 강조색 (예: 녹색) */
	border-color: #28a745;
}

/* 요일 헤더 (일, 월, 화...) */
.fc .fc-col-header-cell {
	background-color: var(--background-light);
	border-bottom: 1px solid var(--border-color); /* 아래쪽에 얇은 선 추가 */
	font-weight: 600;
	font-size: 0.9rem;
	color: var(--text-color-medium);
}

/* 주말 (토/일) 색상 구분 */
.fc-day-sun a {
	color: #dc3545;
} /* 일요일: 빨간색 */
.fc-day-sat a {
	color: var(--primary-color);
} /* 토요일: 주조색 */

/* 날짜 셀 */
.fc-daygrid-day-number {
	font-size: 0.95rem;
	font-weight: 600;
	color: var(--text-color-medium);
}

/* 달력 그리드 선 (경계선 최소화) */
.fc-theme-standard td, .fc-theme-standard th {
	border: 1px solid var(--border-color); /* 연한 회색으로 선 최소화 */
}

/* 오늘 날짜 셀 강조 */
.fc-day-today {
	background-color: var(--primary-light) !important; /* 주조색 계열의 매우 밝은 하늘색 */
}

/* 이벤트 (일정) 디자인 */
.fc-event {
	border-radius: 3px;
	padding: 3px 6px;
	margin: 2px 2px;
	font-size: 0.8rem;
	line-height: 1.3;
	cursor: pointer;
	border: none;
	font-weight: 500;
	/* 이벤트의 배경색과 동일한 색상으로 얇은 테두리 추가 */
	border-left: 3px solid var(--fc-event-bg-color, var(--primary-color));
}

.fc-event-title {
	padding-left: 5px; /* 제목 앞에 약간의 공간 */
}

/* ==================================== */
/* 3. 금월 주요 일정 목록 스타일 (개선) */
/* ==================================== */

.event-list {
/* 	overflow-y: auto; */
	max-height: 500px; /* 예시: 최대 500px까지만 표시하고 스크롤 */
	margin-bottom: 15px;
	padding-right: 5px; /* 스크롤바와 내용 사이 여백 */
}

.event-item {
	display: block;
	padding: 10px 0 10px 15px;
	margin-bottom: 8px;
	border-bottom: 1px dashed var(--border-color);
	font-size: 0.95rem;
	line-height: 1.5;
	position: relative;
	transition: background-color 0.2s;
}

.event-item:hover {
	background-color: var(--background-light); /* 마우스 오버 시 미세한 하이라이트 */
}

.event-date {
	font-weight: 600;
	color: var(--text-color-light);
	margin-bottom: 4px;
	display: block;
}

.event-title {
	color: var(--text-color-dark);
	font-weight: 500;
}

.view-more-button {
    display: block;
    width: fit-content; /* 내용에 맞게 너비 조정 */
    margin: 20px auto 0 auto; /* 상단 여백, 좌우 자동 마진으로 중앙 정렬 */
    padding: 8px 20px;
    border-radius: 20px; /* 둥근 버튼 */
    background-color: var(--primary-color); /* 주조색 */
    color: #fff;
    font-size: 0.9rem;
    font-weight: 600;
    text-align: center;
    text-decoration: none; /* 링크 밑줄 제거 */
    transition: background-color 0.2s, transform 0.2s;
    border: none; /* 버튼 기본 테두리 제거 */
    cursor: pointer;
}

.view-more-button:hover {
    background-color: #3a7bd5; /* 호버 시 약간 어두운 색상 */
    transform: translateY(-1px); /* 약간 위로 뜨는 효과 */
}

/* 학사일정 요일/일자 밑줄 제거 */
.fc .fc-col-header-cell-cushion,
.fc .fc-daygrid-day-number {
     text-decoration: none !important;
}
/* 학사일정 요일 색상 변경 (월-금) */
.fc .fc-col-header-cell-cushion {
    color: var(--text-color-medium) !important;
}

/* 툴바 레이아웃 (플렉스박스) */                                                              
.toolbar {
	display: flex;
	align-items: center;
	gap: 10px;
}

.toolbar .spacer {
	flex-grow: 1;
}

/* ==================================== */
/* 4. 일정 등록/수정 모달 스타일 */
/* ==================================== */
#eventModal {
    display: none; /* 기본적으로 숨김 */
    position: fixed; /* 고정 위치 */
    z-index: 1050; /* 다른 요소 위에 표시 (예: navbar 1000) */
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto; /* 내용이 넘칠 경우 스크롤 */
    background-color: rgba(0, 0, 0, 0.4); /* 반투명 검은색 배경 */

    /* 모달 내용을 중앙에 배치하기 위한 Flexbox */
    display: flex;
    align-items: center; /* 세로 중앙 정렬 */
    justify-content: center; /* 가로 중앙 정렬 */
}

#eventModal .modal-content {
    background-color: #fefefe;
    padding: 25px;
    border: 1px solid #888;
    width: 500px; /* 모달 너비 */
    max-width: 90%; /* 너무 커지지 않도록 최대 너비 설정 */
    border-radius: 8px;
    box-shadow: var(--shadow-medium);
    position: relative; /* 자식 요소(닫기 버튼)의 absolute 포지셔닝 기준 */
}

#eventModal .modal-content h2 {
    text-align: center;
    margin-top: 0;
    margin-bottom: 20px;
    font-size: 1.5rem;
    color: var(--text-color-dark);
}

#eventModal .modal-content .form-group {
    margin-bottom: 15px;
}

#eventModal .modal-content label {
    display: block;
    margin-bottom: 5px;
    font-weight: 500;
}

#eventModal .modal-content input[type="text"],
#eventModal .modal-content input[type="datetime-local"],
#eventModal .modal-content select {
    width: 100%;
    padding: 10px;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    box-sizing: border-box;
}

#eventModal .modal-actions {
    text-align: right;
    margin-top: 20px;
}

#eventModal .modal-actions .btn {
    margin-left: 10px;
}

/* 닫기 버튼 (X) 스타일 */
#eventModal .modal-content .close-button {
    position: absolute;
    top: 10px;
    right: 15px;
    color: #aaa;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
    line-height: 1;
}

#eventModal .modal-content .close-button:hover,
#eventModal .modal-content .close-button:focus {
    color: #000;
    text-decoration: none;
}

/* ==================================== */
/* 5. 전체 일정 목록 페이지 스타일 */
/* ==================================== */

.list-page-container .table th, 
.list-page-container .table td {
    vertical-align: middle;
    text-align: center;
}

.list-page-container .table thead th {
    background-color: var(--background-light);
    font-weight: 600;
    border-bottom: 2px solid var(--border-color);
}

.list-page-container .table tbody tr:hover {
    background-color: var(--background-light);
}



/* ==================================== */
/* 6. 일정 상세 정보 모달 스타일 */
/* ==================================== */
#eventDetailModal .modal-content {
    width: 450px; /* 상세 모달은 조금 더 작게 */
}

#eventDetailModal .detail-group {
    margin-bottom: 1.2rem;
}

#eventDetailModal .detail-label {
    font-weight: 600;
    color: var(--text-color-light); /* 라벨 색상 */
    margin-bottom: 0.25rem;
    font-size: 0.8rem;
    text-transform: uppercase;
}

#eventDetailModal .detail-value {
    font-size: 1.1rem;
    color: var(--text-color-dark); /* 값 색상 */
    margin-bottom: 0;
    padding: 0.5rem;
    background-color: var(--background-light);
    border-radius: 4px;
}

#eventDetailModal .modal-actions {
    text-align: center; /* 버튼 중앙 정렬 */
}


/* ==================================== */
/* 7. 캘린더 범례 스타일 (이전 섹션) */
/* ==================================== */
.calendar-legend {
    display: flex;
    flex-wrap: wrap;
    gap: 13px;
    margin-top: 10px;
    margin-bottom: 5px;
    padding: 15px;
    background-color: var(--background-light);
    border-radius: 8px;
    box-shadow: var(--shadow-light);
}

.legend-item {
    display: flex;
    align-items: center;
    font-size: 0.9rem;
    color: var(--text-color-medium);
    white-space: nowrap; /* 텍스트 줄 바꿈 방지 */
}

.legend-color-box {
    width: 18px;
    height: 18px;
    border-radius: 4px;
    margin-right: 8px;
    border: 1px solid rgba(0,0,0,0.1);
}

 /* 전체 일정 목록 컨테이너 스타일 */
.all-events-list-container {
    background-color: #fff;
    border-radius: 12px;
    padding: 20px;
    box-shadow: var(--shadow-medium);
    margin-top: 30px; /* 캘린더와의 여백 */
}

.all-events-list-container h2 {
    font-size: 1.5rem;
    color: var(--text-color-dark);
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 2px solid var(--border-color);
}

.all-events-list-container .event-list {
    max-height: none; /* 전체 목록이므로 높이 제한 없음 */
}

.all-events-list-container .event-item {
    border-left: 5px solid var(--primary-color); /* 좌측 색상 바 강조 */
    margin-bottom: 10px;
    padding: 12px 15px;
    background-color: var(--background-light);
    border-radius: 8px;
    border-bottom: 1px solid var(--border-color); /* 항목 간 구분선 추가 */
}

.all-events-list-container .event-item:last-child {
    border-bottom: none; /* 마지막 항목은 구분선 없음 */
}

.all-events-list-container .event-item:hover {
    background-color: var(--primary-light); /* 약간 더 진한 호버 색상 */
}

.all-events-list-container .event-category {
    font-size: 0.85rem;
    color: var(--text-color-light);
    margin-left: 10px;
}

#backToCalendarBtn {
    background-color: var(--primary-color);
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 600;
    transition: background-color 0.2s, transform 0.2s;
    margin-top: 20px; /* 목록과의 여백 */
    display: block; /* 블록 레벨 요소로 만들어 중앙 정렬 용이 */
    margin-left: auto;
    margin-right: auto;
}

#backToCalendarBtn:hover {
    background-color: #3a7bd5;
    transform: translateY(-2px);
}


/* ================================================= */
/* 8. 전체 일정 목록 페이지 스타일 (겹침 오류 수정 및 최종 레이아웃) */
/* ================================================= */

/* 1. 최상위 격자 컨테이너 (2단 레이아웃 유지) */
.academic-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr); 
    gap: 0; 
    
    /* 모바일 환경 */
    @media (max-width: 992px) {
        grid-template-columns: 1fr;
        gap: 20px;
    }
}

/* 2. 각 월별 데이터를 담는 컬럼 (겹침 오류 해결 핵심) */
.grid-column {
    display: flex; 
    /* 기본 상하 패딩 */
    padding: 30px 0; 
    
    border-right: 1px solid var(--border-color-light); /* 옅은 세로 구분선 */
    
    /* === 왼쪽 컬럼 (1, 3, 5, 7, 9, 11월) 조정 === */
    &:nth-child(odd) {
        padding-right: 40px; /* 중앙 구분선과의 간격 확보 */
        padding-left: 0;
    }
    
    /* === 오른쪽 컬럼 (2, 4, 6, 8, 10, 12월) 조정 === */
    &:nth-child(even) {
        /* 왼쪽으로 당겨오기 위해 왼쪽 패딩을 왼쪽 컬럼과 동일하게 40px로 설정 */
        padding-left: 20px; 
        padding-right: 0;
        border-right: none; /* 마지막 컬럼이므로 선 제거 */
    }

    /* 모바일 환경 */
    @media (max-width: 992px) {
        border-right: none;
        padding: 15px 0 25px 0 !important;
        border-bottom: 1px solid var(--border-color-light); 
    }
    &:last-child {
        border-bottom: none;
    }
}

/* 3. 월 헤더 컨테이너 (월 이름) */
.month-header-grid {
    width: 110px; 
    min-width: 100px;
    /* 이벤트 목록과의 간격을 위해 오른쪽 패딩 제거 (margin으로 대체) */
    padding-right: 0; 
/*     margin-right: 10px; 이벤트 목록과의 간격 확보 */
    flex-shrink: 0;
}

/* 4. 월 이름 폰트 스타일 (변동 없음) */
.month-ko-grid {
    font-size: 1.8rem; 
    font-weight: 800;
    color: var(--primary-color); 
    line-height: 1.1;
    margin-bottom: 3px;
}

.month-en-grid {
    font-size: 1.2rem;
    font-weight: 500;
    color: var(--text-color-medium);
}

/* 5. 월별 이벤트 목록 */
.month-events-list {
    flex-grow: 1;
    /* 월 헤더와의 간격은 month-header-grid의 margin-right로 조정됨 */
    padding-left: 0; 
}

/* 6. 개별 이벤트 항목 */
.event-row {
    display: flex;
    align-items: flex-start; 
    padding: 10px 0;
    
    border-left: 3px solid transparent; 
    padding-left: 10px;
    
    border-bottom: 1px solid var(--border-color-light); 
}

.event-row:last-child {
    border-bottom: none;
}

/* === 날짜 부분: 너비를 고정하여 제목과 겹치지 않도록 함 (겹침 해결 핵심) === */
.event-date-grid {
    width: 180px; 
    min-width: 140px;
    font-weight: 600;
    color: var(--primary-color); 
    font-size: 0.95rem;
    flex-shrink: 0;
    margin-right: 15px; /* 날짜와 제목 사이 간격 */
    
    border-right: 1px solid var(--border-color-light); 
    padding-right: 15px;
    
    white-space: nowrap; 
}

/* 제목 부분: 남은 공간 모두 사용 */
.event-title-grid {
    flex-grow: 1; 
    color: var(--text-color-dark);
    font-size: 0.95rem;
    line-height: 1.4; 
    padding-left: 0; 
}

/* 모바일 반응형 최종 정리 (변동 없음) */
@media (max-width: 768px) {
    .grid-column {
        flex-direction: column; 
    }
    .month-header-grid {
        width: 100%;
        padding-bottom: 15px;
        margin-bottom: 10px;
        border-right: none; 
        border-bottom: 2px solid var(--primary-color); 
        padding-right: 0;
        padding-left: 0;
        margin-right: 0; /* 모바일에서는 margin 제거 */
    }
    .month-events-list {
        padding-left: 0;
    }
    .event-row {
        flex-direction: column; 
        padding-left: 0;
    }
    .event-date-grid {
        width: 100%;
        min-width: 100%; /* 모바일에서 전체 너비 사용 */
        margin-bottom: 3px;
        border-right: none; 
        padding-right: 0;
    }
    .event-title-grid {
        padding-left: 0;
    }
}





