<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.jsu.mybatis.mapper.StuTuitionDetailMapper">

    <insert id="insertStuTuitionDetail">
        INSERT INTO stu_tuition_detail (
            yearterm_cd,
            student_no,
            tuition_id
        ) VALUES (
            #{yeartermCd},
            #{studentNo},
            #{tuitionId}
        )
    </insert>

    <select id="selectStuTuitionDetailByKey" resultType="kr.or.jsu.vo.StuTuitionDetailVO">
        SELECT
            yearterm_cd,
            student_no,
            tuition_id
        FROM
            stu_tuition_detail
        WHERE
            yearterm_cd = #{yeartermCd}
            AND student_no = #{studentNo}
            AND tuition_id = #{tuitionId}
    </select>

    <select id="selectAllStuTuitionDetails" resultType="kr.or.jsu.vo.StuTuitionDetailVO">
        SELECT
            yearterm_cd,
            student_no,
            tuition_id
        FROM
            stu_tuition_detail
        ORDER BY
            yearterm_cd, student_no, tuition_id
    </select>

    <update id="updateStuTuitionDetail">
        UPDATE stu_tuition_detail
        SET
            yearterm_cd = #{yeartermCd},
            student_no = #{studentNo},
            tuition_id = #{tuitionId}
        WHERE
            yearterm_cd = #{yeartermCd}
            AND student_no = #{studentNo}
            AND tuition_id = #{tuitionId}
    </update>

    <delete id="deleteStuTuitionDetail">
        DELETE FROM stu_tuition_detail
        WHERE
            yearterm_cd = #{yeartermCd}
            AND student_no = #{studentNo}
            AND tuition_id = #{tuitionId}
    </delete>

</mapper>
