/* ==================== */
/* 등록금 페이지 전용 스타일 */
/* ==================== */

/* 외부 래퍼 */
.tuition-management-page {
    padding: 20px;
    background-color: #f8f9fa;
    min-height: 100vh;
}

/* 메인 컨테이너 */
.tuition-management-page .tuition-container {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 30px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    min-height: calc(100vh - 100px);
}

/* 페이지 헤더 */
.tuition-management-page .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 2px solid #28a745;
}

.tuition-management-page .page-header h1 {
    font-size: 23px;
    font-weight: bold;
    color: #333;
    margin: 0;
}

/* 기존 page-title 숨김 */
.tuition-management-page .page-title {
    display: none;
}

/* 행/열 레이아웃 */
.tuition-management-page .row {
    margin-bottom: 20px;
}

.tuition-management-page .col-12 {
    width: 100%;
}

/* 카드 */
.tuition-management-page .card {
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    margin-bottom: 20px;
}

.tuition-management-page .card-header {
    padding: 15px 20px;
    background-color: #f8f9fa;
    border-bottom: 1px solid #e0e0e0;
}

.tuition-management-page .card-title {
    font-size: 16px;
    font-weight: 600;
    color: #333;
    margin: 0;
}

.tuition-management-page .card-body {
	margin-top: 10px;
    padding: 20px;
}

/* 납부확인서 버튼 스타일 */
.tuition-management-page .action-receipt {
    background-color: #6c757d; /* 회색 */
    color: white;
    border: 1px solid #6c757d;
    padding: 6px 12px;
    border-radius: 4px;
    font-size: 13px;
    cursor: pointer;
    transition: all 0.3s;
}

.tuition-management-page .action-receipt:hover {
    background-color: #5a6268;
    border-color: #545b62;
}

.tuition-management-page .action-notice:hover {
    background-color: #0056b3;
    border-color: #004085;
}

/* Bootstrap 클래스 덮어쓰기 */
.tuition-management-page .btn-sm {
    padding: 6px 12px;
    font-size: 13px;
}

/* 테이블 */
.tuition-management-page .table-responsive {
    overflow-x: auto;
    border-radius: 8px 8px 0 0; /* 상단만 둥글게 */
}

.tuition-management-page .tuition-history-table {
    width: 100%;
    border-collapse: collapse;
}

.tuition-management-page .tuition-history-table thead {
    background-color: #28a745;
}

.tuition-management-page .tuition-history-table thead th {
    color: #495057;
    padding: 12px;
    text-align: center;
    font-weight: 600;
    border: none;
}

.tuition-management-page .tuition-history-table tbody tr {
    cursor: pointer;
    transition: background-color 0.2s;
    border-bottom: 1px solid #e0e0e0;
}

.tuition-management-page .tuition-history-table tbody tr:hover {
    background-color: #f8f9fa;
}

.tuition-management-page .tuition-history-table tbody tr.selected {
    background-color: #d4edda;
}

.tuition-management-page .tuition-history-table td {
    padding: 12px;
    text-align: center;
}

.tuition-management-page .text-end {
    text-align: right;
}

.tuition-management-page .text-center {
    text-align: center;
}

.tuition-management-page .text-muted {
    color: #6c757d;
}

.tuition-management-page .py-5 {
    padding-top: 3rem;
    padding-bottom: 3rem;
}

/* 장학금 섹션 */
.tuition-management-page .scholarship-section {
    margin-top: 30px;
}

.tuition-management-page .scholarship-detail-container {
    display: block;
}


.tuition-management-page .scholarship-summary {
    background: #f8f9fa;
    border: 2px solid #28a745;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 40px;
    margin-top: 20px;
    text-align: center;
}

.tuition-management-page .scholarship-summary p {
    margin: 0 0 10px 0;
    color: #155724;
    font-size: 14px;
}

.tuition-management-page .scholarship-summary h3 {
    margin: 0;
    color: #155724;
    font-size: 32px;
    font-weight: bold;
}

/* 차트 컨테이너 */
.tuition-management-page .chart-container {
    display: flex;
    gap: 30px;
    margin-bottom: 30px;
    align-items: flex-start;
}

/* 도넛 차트 여백 조절 */
.tuition-management-page .chart-wrapper {
    flex: 1;
    min-width: 0;
    overflow: visible;
    max-width: 50%;
    margin-left: 250px;
}

.tuition-management-page .chart-wrapper-desc {
    flex: 1;
    min-width: 0;
    overflow: visible;
    max-width: 50%;
    margin-right: 200px;
    margin-top: 30px;
}

.tuition-management-page .chart-wrapper-desc h6 {
	margin-left: 50px;
}


.tuition-management-page #donutChart {
    width: 100%;
    max-width: 400px;
    height: 400px;
    margin: 0 auto;
    position: relative;
    overflow: visible;
}

.tuition-management-page #donutChart svg {
    max-width: 100%;
    max-height: 100%;
    display: block;
    margin: 0 auto;
}

.tuition-management-page #chartLegend {
    padding: 20px;
    max-height: 400px;
    overflow-y: auto;
    overflow-x: hidden;
}

.tuition-management-page .legend-item {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
}

.tuition-management-page .legend-color {
    width: 20px;
    height: 20px;
    border-radius: 4px;
    margin-right: 10px;
    flex-shrink: 0;
}

.tuition-management-page .legend-text {
    flex: 1;
    word-break: break-word;
}

.tuition-management-page .no-data {
    text-align: center;
    color: #999;
    padding: 40px;
}

/* 장학금 테이블 */
.tuition-management-page .table {
    width: 100%;
    border-collapse: collapse;
}

.tuition-management-page .table thead {
    background-color: #f8f9fa;
}

.tuition-management-page .table thead th {
    padding: 12px;
    text-align: center;
    font-weight: 600;
    border-bottom: 2px solid #e0e0e0;
}

.tuition-management-page .table tbody td {
    padding: 12px;
    border-bottom: 1px solid #e0e0e0;
}

/* 모달 */
.tuition-management-page .modal-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
}

.tuition-management-page .modal-container {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    max-width: 900px;
    height: 90%;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 1001;
    display: flex;
    flex-direction: column;
}

.tuition-management-page .modal-header {
    padding: 20px;
    border-bottom: 1px solid #e0e0e0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.tuition-management-page .modal-title {
    font-size: 20px;
    font-weight: bold;
}

.tuition-management-page .close-btn {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: #666;
    padding: 0;
}

.tuition-management-page .close-btn:hover {
    color: #000;
}

.tuition-management-page .modal-body {
    flex: 1;
    padding: 20px;
    overflow: hidden;
    position: relative;
}

.tuition-management-page #pdfPreviewWatermark {
    position: absolute;
    top: 50%;
    left: 67%;
    transform: translate(-50%, -50%) rotate(-45deg);
    font-size: 7vw;
    color: rgba(0, 0, 0, 0.1);
    pointer-events: none;
    z-index: 1000;
    font-weight: bold;
    white-space: nowrap;
}

.tuition-management-page #pdfPreview {
    width: 100%;
    height: 100%;
    border: 1px solid #e0e0e0;
    border-radius: 4px;
}

.tuition-management-page .modal-footer {
    padding: 20px;
    border-top: 1px solid #e0e0e0;
    display: flex;
    justify-content: flex-end;
    gap: 10px;
}

.tuition-management-page .btn {
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
}

.tuition-management-page .btn-primary {
    background-color: #28a745;
    color: white;
}

.tuition-management-page .btn-primary:hover {
    background-color: #218838;
}

.tuition-management-page .btn-secondary {
    background-color: #6c757d;
    color: white;
}

.tuition-management-page .btn-secondary:hover {
    background-color: #5a6268;
}

/* 로딩 스피너 */
.tuition-management-page .spinner-border {
    width: 2rem;
    height: 2rem;
    border: 0.25em solid currentColor;
    border-right-color: transparent;
    border-radius: 50%;
    animation: spinner-border 0.75s linear infinite;
}

@keyframes spinner-border {
    to {
        transform: rotate(360deg);
    }
}

.tuition-management-page .text-primary {
    color: #007bff;
}

.tuition-management-page .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
}

/* D3 툴팁 */
.d3-tooltip {
    position: absolute;
    background: rgba(0, 0, 0, 0.9);
    color: white;
    padding: 12px;
    border-radius: 6px;
    font-size: 13px;
    pointer-events: none;
    z-index: 9999;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    max-width: 250px;
    line-height: 1.5;
}

.d3-tooltip strong {
    display: block;
    margin-bottom: 5px;
    font-size: 14px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
    padding-bottom: 5px;
}

/* ==================== */
/* 반응형 */
/* ==================== */

@media (max-width: 768px) {
    .tuition-management-page {
        padding: 10px;
    }

    .tuition-management-page .tuition-container {
        padding: 20px 15px;
        min-height: calc(100vh - 80px);
    }

    .tuition-management-page .page-header h1 {
        font-size: 22px;
    }

    .tuition-management-page .chart-container {
        flex-direction: column;
    }

    .tuition-management-page .chart-wrapper {
        max-width: 100%;
        width: 100%;
    }

    .tuition-management-page #donutChart {
        max-width: 100%;
        height: 300px;
    }

    .tuition-management-page .modal-container {
        width: 95%;
        height: 95%;
    }
}