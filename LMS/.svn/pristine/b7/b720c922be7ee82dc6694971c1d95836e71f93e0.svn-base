@charset "UTF-8";

body {
	font-family: 'Public Sans', sans-serif;
	margin: 0;
	background-color: white;
	color: #212529;
}

.navbar {
	background: #fff;
	padding: 1rem 2.5rem;
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-bottom: 1px solid #dee2e6;
	position: sticky;
	top: 0;
	z-index: 1000;
}

.logo {
	font-size: 1.5rem;
	font-weight: 700;
	color: #343a40;
	margin-right: 1.5rem;
	cursor: pointer;
	text-decoration: none;
}

.logo:hover {
	color: #0d6efd;
}

.btn {
	padding: 0.625rem 1.25rem;
	border-radius: 0.375rem;
	font-weight: 600;
	border: none;
	cursor: pointer;
}

.btn-primary {
	background-color: #0d6efd;
	color: #fff;
}

.btn-secondary {
	background-color: #6c757d;
	color: #fff;
}

.btn-link {
	background: none;
	color: #0d6efd;
	text-decoration: none;
}

.btn-link:hover {
	color: #0b5ed7;
}

/* 3. 삭제 (빨간색) */
.btn-danger {
    color: #fff;
    background-color: #dc3545; /* 빨간색 배경 */
    border-color: #dc3545;
}

.navbar-nav {
	display: flex;
	list-style: none;
	margin: 0 auto;
	padding: 0;
	align-items: center;
	gap: 3rem;
}

.nav-link {
	color: #343a40;
	text-decoration: none;
	font-weight: 600;
	transition: color 0.2s ease-in-out;
}

.nav-link:hover {
	color: #0d6efd;
}

.navbar-right {
	display: flex;
	align-items: center;
	gap: 1.5rem;
}

.notification-icon {
	font-size: 1.5rem;
	cursor: pointer;
	color: #495057;
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
}

.notification-icon:hover {
	color: #0d6efd;
}

/* 메인 컨테이너 */
.main-container {
	max-width: 1000px;
	margin: 0 auto;
	padding: 2rem;
	background-color: white;
	min-height: calc(100vh - 200px);
}

/* 브레드크럼 */
.breadcrumb {
	margin-bottom: 1.5rem;
	padding: 0.75rem 0;
	border-bottom: 1px solid #e9ecef;
}

.breadcrumb a {
	color: #6c757d;
	text-decoration: none;
	font-size: 0.9rem;
}

.breadcrumb a:hover {
	color: #0d6efd;
}

.breadcrumb span {
	color: #6c757d;
	margin: 0 0.5rem;
}

/* 제목 영역 */
.title-section {
	margin-bottom: 2rem;
	padding-bottom: 1rem;
	border-bottom: 2px solid #0d6efd;
}

.job-title {
	font-size: 1.8rem;
	font-weight: 600;
	color: #343a40;
	margin-bottom: 1rem;
	line-height: 1.4;
}

/* 채용 정보 요약 */
.job-summary {
	background-color: #f8f9fa;
	padding: 1.5rem;
	border-radius: 8px;
	margin-bottom: 2rem;
}

.summary-grid {
	display: grid;
	grid-template-columns: 1fr 1fr;
	gap: 1rem;
}

.summary-item {
	display: flex;
	align-items: center;
	padding: 0.5rem 0;
}

.summary-label {
	font-weight: 600;
	color: #495057;
	width: 120px;
	flex-shrink: 0;
}

.summary-value {
	color: #212529;
	font-weight: 500;
}

.status-badge {
	display: inline-block;
	padding: 0.25rem 0.75rem;
	border-radius: 20px;
	font-size: 0.85rem;
	font-weight: 600;
}

.status-open {
	background-color: #d1ecf1;
	color: #0c5460;
}

.status-closed {
	background-color: #f8d7da;
	color: #721c24;
}

/* 본문 내용 */
.content-section {
	margin-bottom: 2rem;
}

.section-title {
	font-size: 1.3rem;
	font-weight: 600;
	color: #343a40;
	margin-bottom: 1rem;
	padding-bottom: 1rem;
	border-bottom: 1px solid rgb(211, 218, 224);
}

.content-text {
	line-height: 1.6;
	color: #495057;
	white-space: pre-line;
}

/* 첨부파일 */
.attachment-section {
	background-color: #f8f9fa;
	padding: 1.5rem;
	border-radius: 8px;
	margin-bottom: 2rem;
}

.attachment-item {
	display: flex;
	align-items: center;
	padding: 0.5rem 0;
}

.attachment-icon {
	margin-right: 0.5rem;
	color: #6c757d;
}

.attachment-link {
	color: #0d6efd;
	text-decoration: none;
}

.attachment-link:hover {
	text-decoration: underline;
}

/* 버튼 영역 */
.action-buttons {
	display: flex;
	gap: 1rem;
	justify-content: center;
	margin: 2rem 0;
	padding-top: 2rem;
	border-top: 1px solid #e9ecef;
}

/* 목록으로 돌아가기 */
.back-button {
	display: inline-flex;
	align-items: center;
	padding: 0.5rem 1rem;
	background-color: #6c757d;
	color: white;
	text-decoration: none;
	border-radius: 4px;
	font-weight: 500;
}

.back-button:hover {
	background-color: #5a6268;
	color: white;
	text-decoration: none;
}

.footer {
	text-align: center;
	padding: 2rem;
	color: #6c757d;
	font-size: 0.9rem;
	border-top: 1px solid #e0e0e0;
	margin-top: 3rem;
}

/* 반응형 */
@media ( max-width : 768px) {
	.summary-grid {
		grid-template-columns: 1fr;
	}
	.action-buttons {
		flex-direction: column;
		align-items: center;
	}
}