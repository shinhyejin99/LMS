@charset "UTF-8";

/* 외부 래퍼 */
.staff-list-page {
    padding: 20px;
    background-color: #f8f9fa;
    min-height: 100vh;
}

/* 메인 컨테이너 */
.staff-list-page .staff-container {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 30px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    min-height: calc(100vh - 100px);
}

/* 페이지 헤더 */
.staff-list-page .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 2px solid #e9ecef; /* 회색으로 */
}

.staff-list-page .page-header h1 {
    font-size: 23px;
    font-weight: bold;
    color: #333;
    margin: 0;
}

/* Breadcrumb */
.staff-list-page .breadcrumb {
    background-color: transparent;
    padding: 0;
    margin-bottom: 20px;
    list-style: none;
    display: flex;
}

.staff-list-page .breadcrumb-item {
    display: inline;
    font-size: 14px;
}

.staff-list-page .breadcrumb-item + .breadcrumb-item::before {
    content: ">";
    padding: 0 8px;
    color: #6c757d;
}

.staff-list-page .breadcrumb-item a {
    color: #007bff;
    text-decoration: none;
}

.staff-list-page .breadcrumb-item.active {
    color: #6c757d;
}

/* 부서 카드 영역 */
.staff-list-page .status-cards-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin-bottom: 30px;
}

.staff-list-page .status-card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
}

.staff-list-page .status-card:hover {
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
    transform: translateY(-2px);
}

.staff-list-page .status-card-body {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.staff-list-page .status-card-title {
    font-size: 12px;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 8px;
}

.staff-list-page .status-card-count {
    font-size: 24px;
    font-weight: bold;
    color: #333;
}

.staff-list-page .status-card-icon {
    font-size: 32px;
    color: #d1d3e2;
}

.staff-list-page .text-primary { color: #4e73df; }
.staff-list-page .text-warning { color: #f6c23e; }

/* 공지 박스 */
.staff-list-page .custom-notice-box {
    background-color: #ffffe0;
    border: 1px solid #ffeb3b;
    padding: 1rem 1.5rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.08);
    margin-bottom: 1.5rem;
}

.staff-list-page .custom-notice-box h6 {
    color: #c99400;
    margin-bottom: 0.75rem;
    font-weight: 700;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
}

.staff-list-page .custom-notice-box ul {
    margin-bottom: 0;
    padding-left: 0;
    list-style: none;
}

.staff-list-page .custom-notice-box ul li {
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
    color: #444;
    padding-left: 1.25rem;
    position: relative;
}

.staff-list-page .custom-notice-box ul li::before {
    content: "\2022";
    color: #c99400;
    font-weight: bold;
    display: inline-block;
    width: 1em;
    margin-left: -1em;
}

/* 콘텐츠 레이아웃 */
.staff-list-page .content-row {
    display: flex;
    gap: 20px;
    align-items: stretch;
}

.staff-list-page .content-left {
    flex: 1;
}

.staff-list-page .content-right {
    width: 350px;
    flex-shrink: 0;
}

/* 액션 버튼 영역 */
.staff-list-page .action-buttons {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.staff-list-page .search-form {
    display: flex;
    gap: 10px;
}

.staff-list-page .form-control {
    padding: 8px 12px;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    font-size: 14px;
}

.staff-list-page .btn {
    padding: 8px 16px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 500;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 5px;
}

.staff-list-page .btn-primary {
    background-color: #007bff;
    color: white;
}

.staff-list-page .btn-primary:hover {
    background-color: #0056b3;
}

.staff-list-page .btn-success {
    background-color: #28a745;
    color: white;
}

.staff-list-page .btn-success:hover {
    background-color: #218838;
}

/* 필터 헤더 */
.staff-list-page .filter-header {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 15px;
    color: #333;
}

/* 테이블 스타일 */
.staff-list-page .table-responsive {
    overflow-x: auto;
}

.staff-list-page .data-table {
    width: 100%;
    border-collapse: collapse;
    background: white;
    margin-bottom: 20px;
}

.staff-list-page .data-table thead {
    background-color: #f8f9fa;
}

.staff-list-page .data-table th {
    padding: 12px;
    text-align: left;
    font-weight: 600;
    border-bottom: 2px solid #dee2e6;
    color: #333;
}

.staff-list-page .data-table td {
    padding: 12px;
    border-bottom: 1px solid #dee2e6;
}

.staff-list-page .data-table tbody tr {
    cursor: pointer;
    transition: background-color 0.2s;
}

.staff-list-page .data-table tbody tr:hover {
    background-color: #f2f2f2;
}

.staff-list-page .text-center {
    text-align: center;
}

.staff-list-page .text-nowrap {
    white-space: nowrap;
}

/* 페이지네이션 */
.staff-list-page .pagination-area {
    display: flex;
    justify-content: center;
    gap: 5px;
    margin-top: 20px;
}

.staff-list-page .pagination-area a {
    padding: 8px 12px;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    color: #007bff;
    text-decoration: none;
    transition: all 0.2s;
    min-width: 30px;
    text-align: center;
}

.staff-list-page .pagination-area a:hover {
    background-color: #e9ecef;
    color: #212529;
    border-color: #ced4da;
}

.staff-list-page .pagination-area a.active {
    background-color: #007bff;
    color: white;
    border-color: #007bff;
    font-weight: bold;
    cursor: default;
}

.staff-list-page .pagination-area a.active:hover {
    background-color: #007bff;
    color: white;
    border-color: #007bff;
}

/* 통계 차트 카드 */
.staff-list-page .chart-card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    height: 100%;
    display: flex;
    flex-direction: column;
}

.staff-list-page .chart-card-header {
    background-color: #4e73df;
    color: white;
    padding: 15px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}

.staff-list-page .chart-card-header h6 {
    margin: 0;
    font-weight: bold;
}

.staff-list-page .chart-card-body {
    padding: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
}

.staff-list-page .chart-container {
    position: relative;
    height: 300px;
    width: 100%;
}

.staff-list-page .chart-container canvas {
    max-height: 100%;
    width: 100% !important;
    height: 100% !important;
}

/* 반응형 */
@media (max-width: 1200px) {
    .staff-list-page .status-cards-row {
        grid-template-columns: 1fr;
    }

    .staff-list-page .content-row {
        flex-direction: column;
    }

    .staff-list-page .content-right {
        width: 100%;
    }
}

@media (max-width: 768px) {
    .staff-list-page .action-buttons {
        flex-direction: column;
        gap: 15px;
        align-items: stretch;
    }
}