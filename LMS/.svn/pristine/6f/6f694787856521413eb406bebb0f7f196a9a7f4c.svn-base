/*
 * ==================================================================
 * 시설 예약 캘린더 스타일 (portalFacilityReservation.css)
 * ==================================================================
 */

/* 예약 아이템 기본 스타일 */
.reservation-item {
    position: absolute;
    background-color: #e0f7fa; /* 연한 하늘색 */
    border: 1px solid #00bcd4; /* 진한 하늘색 테두리 */
    border-radius: 4px;
    padding: 2px 5px;
    font-size: 0.8em;
    color: #006064;
    overflow: hidden; /* 텍스트가 블록을 넘어가면 숨김 */
    box-sizing: border-box;
    width: 100%; /* 부모 컬럼 너비에 맞춤 */
    z-index: 1; /* 다른 요소 위에 표시 */
    cursor: pointer;
    transition: background-color 0.2s ease;
}

.reservation-item:hover {
    background-color: #b2ebf2; /* 호버 시 색상 변경 */
}

/* 예약 아이템 내부 텍스트 스타일 */
.reservation-item .time,
.reservation-item .reason,
.reservation-item .user {
    white-space: nowrap; /* 텍스트 줄바꿈 방지 */
    overflow: hidden;    /* 넘치는 텍스트 숨김 */
    text-overflow: ellipsis; /* 넘치는 텍스트 ...으로 표시 */
    display: block; /* 각 정보를 블록으로 표시 */
    line-height: 1.2;
}

.reservation-item .time {
    font-weight: bold;
    color: #004d40;
}

.reservation-item .reason {
    margin-top: 2px;
}

.reservation-item .user {
    font-style: italic;
    color: #424242;
}

/* 달력 그리드 컬럼 스타일 (필요시 조정) */
.calendar-grid-weekly .day-column {
    position: relative; /* 예약 아이템의 absolute 포지셔닝 기준 */
    /* min-height: 720px; */ /* 9시부터 18시까지 (9시간 * 40px/시간 = 360px) + 여유 공간 */
    /* border-right: 1px solid #eee; */
}

/* 달력 헤더 요일 스타일 (필요시 조정) */
.calendar-header .day-name {
    text-align: center;
    padding: 5px;
    font-weight: bold;
}

/* 달력 시간 축 스타일 (필요시 조정) */
.time-axis li {
    height: 40px; /* GRID_SLOT_PX와 일치 */
    line-height: 40px;
    text-align: right;
    padding-right: 10px;
    border-bottom: 1px dashed #eee;
}

.time-axis li:last-child {
    border-bottom: none;
}

/* 내 예약 스타일 */
.my-reservation {
    background-color: #e8f5e9; /* 연한 녹색 */
    border: 1px solid #4caf50; /* 진한 녹색 테두리 */
    color: #1b5e20;
}

.my-reservation:hover {
    background-color: #c8e6c9; /* 호버 시 색상 변경 */
}

/* 다른 사용자 예약 스타일 */
.other-reservation {
    background-color: #f5f5f5; /* 회색 */
    border: 1px solid #9e9e9e; /* 진한 회색 테두리 */
    color: #424242;
    cursor: not-allowed; /* 클릭 불가 표시 */
}

.other-reservation:hover {
    background-color: #e0e0e0; /* 호버 시 색상 변경 */
}
