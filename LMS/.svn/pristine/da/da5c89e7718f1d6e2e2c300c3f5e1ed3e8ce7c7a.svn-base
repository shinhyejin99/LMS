/**
 * <pre>
 * << 개정이력(Modification Information) >>
 *
 *   수정일      			수정자           수정내용
 *  -----------   	-------------    ---------------------------
 *  2025. 10. 29.     	정태일            최초 생성
 *
 * </pre>
 */
@charset "UTF-8";

/* 외부 래퍼 */
.department-list-page {
    padding: 20px;
    background-color: #f8f9fa;
    min-height: 100vh;
}

/* 메인 컨테이너 */
.department-list-page .department-container {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 30px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    min-height: calc(100vh - 100px);
}

/* 페이지 헤더 */
.department-list-page .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 2px solid #e9ecef; /* 회색으로 */
}

.department-list-page .page-header h1 {
    font-size: 23px;
    font-weight: bold;
    color: #333;
    margin: 0;
}

/* Breadcrumb */
.department-list-page .breadcrumb {
    background-color: transparent;
    padding: 0;
    margin-bottom: 20px;
    list-style: none;
    display: flex;
}

.department-list-page .breadcrumb-item {
    display: inline;
    font-size: 14px;
}

.department-list-page .breadcrumb-item + .breadcrumb-item::before {
    content: ">";
    padding: 0 8px;
    color: #6c757d;
}

.department-list-page .breadcrumb-item a {
    color: #007bff;
    text-decoration: none;
}

.department-list-page .breadcrumb-item.active {
    color: #6c757d;
}

/* 차트 섹션 */
.department-list-page .chart-section-header {
    font-size: 16px;
    font-weight: bold;
    color: #333;
    margin-bottom: 15px;
}

.department-list-page .chart-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin-bottom: 30px;
}

.department-list-page .chart-card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.department-list-page .chart-card-header {
    padding: 12px 15px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    color: white;
}

.department-list-page .chart-card-header.bg-primary {
    background-color: #007bff;
}

.department-list-page .chart-card-header.bg-secondary {
    background-color: #6c757d;
}

.department-list-page .chart-card-header h6 {
    margin: 0;
    font-size: 14px;
    font-weight: bold;
}

.department-list-page .chart-card-body {
    padding: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.department-list-page .chart-container {
    position: relative;
    height: 250px;
    width: 100%;
}

/* 필터 카드 */
.department-list-page .quick-filter-card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
}

.department-list-page .quick-filter-card .card-header {
    padding: 10px 15px;
    background-color: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
    font-size: 14px;
    font-weight: bold;
}

.department-list-page .quick-filter-card .card-body {
    padding: 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 15px;
}

/* 필터 리스트 */
.department-list-page .filter-list {
    display: flex;
    gap: 10px;
    list-style: none;
    padding: 0;
    margin: 0;
    flex-wrap: wrap;
}

.department-list-page .filter-list-item {
    padding: 8px 15px;
    background: white;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.2s;
    font-size: 14px;
}

.department-list-page .filter-list-item:hover {
    background-color: #f8f9fa;
}

.department-list-page .filter-list-item.active {
    background-color: #007bff;
    color: white;
    border-color: #007bff;
}

.department-list-page .filter-list-item .badge {
    margin-left: 8px;
    background-color: #6c757d;
    padding: 3px 8px;
    border-radius: 10px;
    font-size: 12px;
}

.department-list-page .filter-list-item.active .badge {
    background-color: rgba(255, 255, 255, 0.3);
}

.department-list-page .filter-search-group {
    display: flex;
    gap: 780px; /* 필터 리스트와 검색 폼 사이의 세로 간격 */
    flex-grow: 1;
}


/* 검색 폼 */
.department-list-page .search-form {
    display: flex;
    gap: 0;
    align-items: center;
    margin-right: auto;
}



.department-list-page .form-control {
    padding: 5px 12px;
    border: 1px solid #dee2e6;
    border-radius: 4px 0 0 4px;
    font-size: 14px;
    height: 34px;
    min-width: 220px;
}

.department-list-page .btn {
    padding: 5px 14px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 500;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 5px;
    height: 34px;
    white-space: nowrap;
}

.department-list-page .btn-primary {
    background-color: #007bff;
    color: white;
    border-radius: 0 4px 4px 0;
}

.department-list-page .btn-primary:hover {
    background-color: #0056b3;
}

.department-list-page .btn-success {
    background-color: #28a745;
    color: white;
}

.department-list-page .btn-success:hover {
    background-color: #218838;
}

/* 콘텐츠 영역 */
.department-list-page .content-row {
    display: flex;
    gap: 20px;
    align-items: stretch;
}

.department-list-page .content-left {
    flex: 1;
}

.department-list-page .content-right {
    width: 250px;
    flex-shrink: 0;
}

/* 필터 헤더 */
.department-list-page .filter-header {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 15px;
    color: #333;
}

/* 테이블 스타일 */
.department-list-page .table-container {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.department-list-page .data-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 0;
}

.department-list-page .data-table thead {
    background-color: #343a40;
    color: white;
    position: sticky;
    top: 0;
    z-index: 10;
}

.department-list-page .data-table th {
    padding: 12px;
    text-align: center;
    font-weight: 600;
    font-size: 14px;
    white-space: nowrap;
}

.department-list-page .data-table td {
    padding: 12px;
    border-bottom: 1px solid #dee2e6;
    font-size: 14px;
    text-align: center;
}

.department-list-page .data-table tbody tr {
    cursor: pointer;
    transition: background-color 0.2s;
}

.department-list-page .data-table tbody tr:hover {
    background-color: #f8f9fa;
}

.department-list-page .text-center {
    text-align: center;
}

.department-list-page .text-secondary {
    color: #6c757d;
}

.department-list-page .badge {
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
}

.department-list-page .badge.bg-success {
    background-color: #28a745;
    color: white;
}

.department-list-page .badge.bg-danger {
    background-color: #dc3545;
    color: white;
}

/* 페이지네이션 */
.department-list-page .pagination-area {
    display: flex;
    justify-content: center;
    gap: 5px;
    margin-top: 20px;
}

.department-list-page .pagination-area a {
    padding: 8px 12px;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    color: #007bff;
    text-decoration: none;
    transition: all 0.2s;
    min-width: 30px;
    text-align: center;
}

.department-list-page .pagination-area a:hover {
    background-color: #e9ecef;
    color: #212529;
    border-color: #ced4da;
}

.department-list-page .pagination-area a.active {
    background-color: #007bff;
    color: white;
    border-color: #007bff;
    font-weight: bold;
    cursor: default;
}

/* KPI 카드 */
.department-list-page .kpi-wrapper {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.department-list-page .kpi-card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    padding: 15px;
    border-left: 4px solid;
}

.department-list-page .kpi-card.border-primary {
    border-left-color: #5560ea;
}

.department-list-page .kpi-card.border-success {
    border-left-color: #28a745;
}

.department-list-page .kpi-card.border-danger {
    border-left-color: #dc3545;
}

.department-list-page .kpi-card.border-info {
    border-left-color: #17a2b8;
}

.department-list-page .kpi-label {
    font-size: 12px;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 8px;
}

.department-list-page .kpi-label.text-primary {
    color: #5560ea;
}

.department-list-page .kpi-label.text-success {
    color: #28a745;
}

.department-list-page .kpi-label.text-danger {
    color: #dc3545;
}

.department-list-page .kpi-label.text-info {
    color: #17a2b8;
}

.department-list-page .kpi-value {
    font-size: 24px;
    font-weight: 450;
    color: #333;
}

.department-list-page .kpi-value span {
    font-size: 16px;
    font-weight: normal;
    color: #6c757d;
    margin-left: 5px;
}

/* 반응형 */
@media (max-width: 1200px) {
    .department-list-page .chart-row {
        grid-template-columns: 1fr;
    }

    .department-list-page .content-row {
        flex-direction: column;
    }

    .department-list-page .content-right {
        width: 100%;
    }
}